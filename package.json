{
  "name": "react-typescript-web-extension-starter",
  "version": "1.0.0",
  "description": "A web extension starter kit built with React and TypeScript",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.production.js",
    "css": "postcss ./src/styles/tailwind.css -o ./src/styles/tailwind.generated.css",
    "dev": "webpack --config webpack.development.js --watch --progress",
    "lint": "eslint --fix -c ./.eslintrc.js \"src/**/*.ts*\"",
    "prebuild": "NODE_ENV=production npm run css && npm run lint && rimraf dist",
    "predev": "npm run css",
    "prettify": "prettier --write \"src/**/*.ts*\""
  },
  "keywords": [
    "extension",
    "react",
    "typescript",
    "boilerplate"
  ],
  "author": "slashbit",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": "^10.2.6",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.2.6",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "html-webpack-plugin": "^4.5.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.1.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webextension-polyfill-ts": "^0.22.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
